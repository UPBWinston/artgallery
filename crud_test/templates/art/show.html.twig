{% extends 'base.html.twig' %}

{% block title %}Art{% endblock %}

{% block body %}
    <h1>Art</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ art.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ art.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ art.description }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ art.year }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ art.price }}</td>
            </tr>
            <tr>
                <th>IsAvailable</th>
                <td>{{ art.isAvailable ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_art_index') }}">back to list</a>

    <a href="{{ path('app_art_edit', {'id': art.id}) }}">edit</a>

    {{ include('art/_delete_form.html.twig') }}
{% endblock %}
